<Page x:Class="arrows.CustomGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:arrows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomGame">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <ComboBox x:Name="RowsBox" Width="200" Margin="10" SelectionChanged="ComboBox_SelectionChanged">
                <ComboBoxItem Content="Small" />
                <ComboBoxItem Content="Medium" />
                <ComboBoxItem Content="Large" />
            </ComboBox>
            <Button Content="Generate" Click="GenerateCustom" Width="90"/>
            <Button Content="Back" Click="BackToMenu" Width="90" Margin="20"/>
            <Button Content="Check" Click ="CheckIfSolvable" Width="90"/>
        </StackPanel>
        <ContentControl x:Name="CustomGameField" Grid.Column="1"/>
    </Grid>
</Page>
