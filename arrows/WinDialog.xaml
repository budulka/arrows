<Window x:Class="arrows.WinDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Congratulations" Height="150" Width="300">
    <Grid>
        <TextBlock Text="Congratulations! You've won the game!" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   TextWrapping="Wrap" Margin="10"/>
        <Button Content="OK" Width="75" Height="25" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="OKButton_Click"/>
    </Grid>
</Window>